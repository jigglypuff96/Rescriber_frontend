{
  "manifest_version": 3,
  "name": "PII Auto Reviser",
  "version": "1.0",
  "description": "An extension that revises PII.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/16.png"
  }
}
